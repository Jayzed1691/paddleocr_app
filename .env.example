# Environment Configuration for PaddleOCR Application
# Copy this file to .env and configure as needed

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/paddleocr.log

# OCR Configuration
DEFAULT_LANGUAGE=en
OCR_DEVICE=cpu  # cpu, gpu:0, npu:0, etc.
OCR_PRECISION=fp32  # fp32, fp16

# File Processing
MAX_FILE_SIZE_MB=50
PDF_DPI=300

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_DIR=.cache

# Application Settings
DEBUG_MODE=false
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Model Paths (optional - leave empty to use defaults)
DET_MODEL_DIR=
REC_MODEL_DIR=
CLS_MODEL_DIR=
